<section id="contact">
    <div class="contact-form-container container-fluid">
        <div class="row">
            <div class="col-lg-5 col-md-5">
                <h2 class="contact-heading">Want to get in touch?</h2>
            </div>

            <div class="col-lg-7 col-md-7">
                <form action="/contact" method="post" id="contact-form">
                    <div class="form-row">
                        <div class="col">
                            <input type="text" class="form-control" id="inputName" placeholder="Name" autocomplete="off" name="sender_name" required>
                        </div>

                        <p></p>

                        <div class="col">
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email" autocomplete="off" name="sender_email" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <textarea class="form-control" id="messageTextarea" rows="8" placeholder="Leave your message here." name="message" minlength="1" required></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <button type="submit" class="btn btn-primary btn-lg" id="submit" name="sendMessage">Submit</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>