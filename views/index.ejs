<%- include("partials/header") %>

<section id="intro">

    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Akshay Singh</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <% let i = 0; %>
                <% while(i < navItems.length){ %>
                    <% let navItem = navItems[i]; %>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><%=navItem%></a>
                    </li>
                <% i++; %>    
                <% } %>    
            </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="profile-pic-container col-lg-4 col-md-4 col-sm-12">
                <img class="profile-pic" src="images/profile_pic.png" alt="profile pic">
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12">
                <span id="waving-hand">ðŸ‘‹</span>
                <span class="hi-there">
                    Hi, I'm Akshay
                </span>
                <p class="intro-text">
                    Fuelled by a passion for designing compelling products, I have a deep desire to excel and
                    continuously improve in my work. Learn more about my journey below.
                </p>
            </div>
        </div>
    </div>

</section>

<section id="contact">
    <div class="contact-form container-fluid">
        <div class="row">
            <div class="col-lg-5 col-md-5">
                <h2 class="contact-heading">Want to get in touch?</h2>
            </div>

            <div class="col-lg-7 col-md-7">
                <form action="index.html">
                    <div class="form-row">
                        <div class="col">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Name">
                        </div>

                        <div class="col">
                            <label for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="messageTextarea">Message</label>
                            <textarea class="form-control" id="messageTextarea" rows="8"></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>


<%- include("partials/footer") %>